%runscript
    echo "Singularity Container: Pytorch and Caffe2, Ubuntu 16.04, CUDA 9.0, cuDNN 7.1, python 3.5, AVX2 instructions."
    echo "The image contains: Jupyter IBverbs support"

WORKDIR /workspace

